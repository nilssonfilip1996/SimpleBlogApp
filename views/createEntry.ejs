<%- include('partials/header.ejs') %>

<h1 class="text-center display-1">New Blog Entry</h1>
<form action="" method="post">
  <div class="container mt-2">
    <div class="row justify-content-center card p-3 border-primary">
      <div class="mb-3">
        <label for="titelInput" class="form-label">Titel</label>
        <input
          type="text"
          class="form-control border-4"
          id="entryTitel"
          name="entryTitel"
          required
        />
      </div>
      <div class="mb-3">
        <label for="textInput" class="form-label">Entry Text</label>
        <textarea
          class="form-control border-4"
          id="entryText"
          name="entryText"
          rows="7"
          required
        ></textarea>
      </div>
      <div class="d-flex card-body justify-content-end">
        <div>
          <button class="btn btn-success" type="submit" formaction="/addEntry">Save</button>
          <button class="btn btn-danger" type="submit" formmethod="get" formaction="/">Cancel</button> 
        </div>
      </div>
    </div>
  </div>
</form>

